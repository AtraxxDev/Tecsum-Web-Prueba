<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }}</title>
        <meta name="description" content="{{ description }}">
        {# <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"> #}
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
        <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="/css/styles.css">

    </head>
    <body>
            {% include "header.njk" %}
        <div class="container">
            <main>
                <div class="text-center py-2">
                    <h1>{{ name_plantel }}</h1>
                    <h2>Conoce nuestras instalaciones</h2>
                </div>
                    <div class="video-container">
                        <iframe width="560" height="315" src="{{ URL_Video }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                    </div>
                
                {# Inicio- Galeria #}
                    <div class="row pt-5">
                        <div class="col-12">
                            <h2 class="text-center">Galeria</h2>
                        </div>
                    </div>
                    <div class="row py-3 text-center">
                        <div class="col-6 col-lg-3 mb-3">
                            <img src="{{ URL_Image_1 }}" class="img-fluid" alt="Galeria 1">
                        </div>
                        <div class="col-6 col-lg-3 mb-3">
                            <img src="{{ URL_Image_2 }}" class="img-fluid" alt="Galeria 2">
                        </div>
                        <div class="col-6 col-lg-3 mb-3">
                            <img src="{{ URL_Image_3 }}" class="img-fluid" alt="Galeria 3">
                        </div>
                        <div class="col-6 col-lg-3 mb-3">
                            <img src="{{ URL_Image_4 }}" class="img-fluid" alt="Galeria 4">
                        </div>
                          <div class="col-6 col-lg-3 mb-3">
                            <img src="{{ URL_Image_5 }}" class="img-fluid" alt="Galeria 5">
                        </div>
                        <div class="col-6 col-lg-3 mb-3">
                            <img src="{{ URL_Image_6 }}" class="img-fluid" alt="Galeria 6">
                        </div>
                        <div class="col-6 col-lg-3 mb-3">
                            <img src="{{ URL_Image_7 }}" class="img-fluid" alt="Galeria 7">
                        </div>
                        <div class="col-6 col-lg-3 mb-3">
                            <img src="{{ URL_Image_8 }}" class="img-fluid" alt="Galeria 8">
                        </div>
                    </div>
                {# Fin- Galeria #}
                {# Inicio-Maps #}
                <div class="text-center pb-5">
                    <h2 class="py-3">Ubicacion del Plantel</h2>
                    <div class="map-container">
                        <iframe src="{{ URL_Maps }}" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                {# Fin-Maps #}
            </main>
        </div>
            {% include "footer.njk" %}
            {% include "whatsapp-btn.njk" %}

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
            <script type="module" src="/js/main.js"></script>
    </body>
</html>