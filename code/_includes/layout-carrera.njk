<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }}</title>
        <meta name="description" content="{{ description }}">
        {# <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"> #}
              <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
        <link rel="shortcut icon" href="https://tecsum.edu.mx/Images/Iconos/Logos/Tecsum_Logo.webp" type="image/x-icon">
        
        <link rel="stylesheet" href="/css/styles.css">        
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
            {% include "header.njk" %}
        <div class="container">
            <main>
                <div class="container">
                    <div class="row py-3">
                        <div class="col-12 col-md-6">
                            <h1 class="titleFont">{{ name_carrera }}</h1>
                            <hr class="thick-hr">
                            <p>{{ description_short }}</p>
                        </div>
                        <div class="col-12 col-md-6 text-center">
                            <img src="{{ featured_image }}" class="img-fluid" alt="{{ name_carrera }}">
                        </div>
                    </div>
                    <hr class="thick-hr">
                    <div class="row py-3">
                        <div class="col-12">
                            {{ content | safe }}
                        </div>
                    </div>
                    <div class="table-container text-center">
        <div class="row py-3">
            <div class="col-12 col-md-4">
                <img src="/img/Iconos/Ventaja1.webp" alt="Duración Imagen" class="rounded-image">
                <h4>Duración</h4>
                <p>{{ duration }}</p>
            </div>
            <div class="col-12 col-md-4">
                <img src="/img/Iconos/Ventaja1.webp" alt="Modalidad Imagen" class="rounded-image">
                <h4>Modalidad</h4>
                <p>{{ modality }}</p>
            </div>
            <div class="col-12 col-md-4">
                <img src="/img/Iconos/Ventaja1.webp" alt="Inicio de Curso Imagen" class="rounded-image">
                <h4>Inicio de Curso</h4>
                <p>{{ course_start }}</p>
            </div>
        </div>
    </div>


                    <div class="text-center p-5">
                        <a href="{{ study_plan_url }}" download class="btn btn-download">
                            <i class="fas fa-download"></i>
                            Descargar Plan de Estudios PDF
                        </a>
                    </div>


                    <div class="row py-3">
                        <div class="col-12">
                            <h2 class="text-center">Disponibles en estos Planteles</h2>
                        </div>
                    </div>
                    <div class="row py-3 text-center">
                        {% for plantel in planteles %}
                            <div class="col-6 col-lg-4 mb-3">
                                <img src="{{ plantel.image }}" class="img-fluid rounded" alt="{{ plantel.name }}">
                                <p class="mt-2">{{ plantel.name }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </main>
        </div>
            {% include "footer.njk" %}
            {% include "whatsapp-btn.njk" %}
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
            <script type="module" src="/js/main.js"></script>
    </body>
</html>